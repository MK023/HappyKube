# Application
APP_ENV=development
APP_NAME=HappyKube
APP_VERSION=2.0.0
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_WORKERS=4
API_TIMEOUT=120

# Database (Neon PostgreSQL)
DB_HOST=your-neon-host.neon.tech
DB_PORT=5432
DB_NAME=neondb
DB_USER=your_user
DB_PASSWORD=your_password
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=False

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=False
REDIS_CACHE_TTL=3600

# Security
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-32-byte-base64-encoded-encryption-key
JWT_SECRET_KEY=your-jwt-secret-key-change-me
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# API Keys (comma-separated for multiple keys)
API_KEYS=dev-key-12345,test-key-67890

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_API_TIMEOUT=30

# ML Models
ITALIAN_EMOTION_MODEL=MilaNLProc/feel-it-italian-emotion
ENGLISH_EMOTION_MODEL=j-hartmann/emotion-english-distilroberta-base
SENTIMENT_MODEL=MilaNLProc/feel-it-italian-sentiment
HF_HOME=/app/.cache/huggingface
TRANSFORMERS_CACHE=/app/.cache/transformers

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100 per minute
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1

# CORS
CORS_ENABLED=True
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Monitoring
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=9090

# Sentry (optional)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
