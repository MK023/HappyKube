# Example secrets file for Minikube
# COPY THIS FILE to secrets.yaml and fill in your values
# DO NOT commit secrets.yaml to git!

apiVersion: v1
kind: Secret
metadata:
  name: happykube-secrets
  namespace: happykube
type: Opaque
stringData:
  # Database (Neon)
  db-host: "your-neon-host.neon.tech"
  db-name: "neondb"
  db-user: "your-user"
  db-password: "your-password"

  # Encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
  encryption-key: "YOUR_BASE64_ENCRYPTION_KEY_HERE"

  # JWT
  jwt-secret: "your-jwt-secret-change-me"

  # API Keys (comma-separated)
  api-keys: "dev-key-12345,test-key-67890"

  # Telegram
  telegram-token: "YOUR_TELEGRAM_BOT_TOKEN"
