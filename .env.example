# Database Configuration
# NeonDB or any PostgreSQL-compatible database
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# Redis Configuration
# Redis Cloud or any Redis-compatible service
REDIS_URL=redis://user:password@host:6379/0

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Groq AI Configuration (REQUIRED for emotion analysis)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Security (REQUIRED)
ENCRYPTION_KEY=your-32-char-fernet-key-here==
JWT_SECRET_KEY=your-super-secret-jwt-key-here

# API Keys for authentication (CRITICAL - protects API from public access)
# Generate with: python3 -c "import secrets; print('HK_' + secrets.token_urlsafe(32))"
API_KEYS=HK_your_generated_key_here
INTERNAL_API_KEY=HK_your_internal_key_here

# Application Configuration
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# CORS (optional)
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting (optional)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100 per minute
