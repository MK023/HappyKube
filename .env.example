# Database Configuration
# Render auto-provides DATABASE_URL, or use individual fields
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Redis Configuration
# Render auto-provides REDIS_URL
REDIS_URL=redis://host:6379/0

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Security (REQUIRED)
ENCRYPTION_KEY=your-32-char-fernet-key-here==
JWT_SECRET_KEY=your-super-secret-jwt-key-here

# API Keys for authentication (CRITICAL - protects API from public access)
# Generate with: python3 -c "import secrets; print('HK_' + secrets.token_urlsafe(32))"
# Add this SAME key to both API service AND bot service on Render
API_KEYS=HK_your_generated_key_here

# HuggingFace (REQUIRED)
HUGGINGFACE_TOKEN=hf_your_token_here

# Application Configuration
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# CORS (optional)
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting (optional)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100 per minute
